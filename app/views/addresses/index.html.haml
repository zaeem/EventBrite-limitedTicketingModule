%p
  Current Addresses:

%table{:border => "1"}
  %tr
    %td
      = "id"
    %td
      = "modify"
    %td
      = "delete"
    %td
      = "user_id"
    %td
      = "type"
    %td
      = "name"
    %td
      = "address1"

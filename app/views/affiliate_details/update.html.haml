%p
  Modify Affiliate Detail

%form{:action => "/affiliate_details/modify", :method => "post"}
  %input{:type => "hidden", :name => "id", :value => @affiliate_detail.id}
  %p
    %label{:for => "user_id"}
      User Id
    %br
    %input#user_id{:type => "text", :name => "user_id", :value => @affiliate_detail.user_id}
  %p
    %label{:for => "percentage"}
      Percentage
    %br
    %input{:type => "text", :name => "percentage", :value => @affiliate_detail.percentage}
  %p
    %label{:for => "flat_fee"}
      Flat Fee
    %br
    %input{:type => "number", :step => "any", :name => "flat_fee", :value => @affiliate_detail.flat_fee}
  %p
    %label{:for => "commissionable_type"}
      Commissionable Type
    %br
    %input{:type => "text", :name => "commissionable_type", :value => @affiliate_detail.commissionable_type}
  %p
    %label{:for => "payment_threshold"}
      Payment Threshold
    %br
    %input{:type => "number", :step => "any", :name => "payment_threshold", :value => @affiliate_detail.payment_threshold}
  %p
    %label{:for => "locked"}
      Locked
    %br
    %input{:type => "checkbox", :name => "locked", :checked => @affiliate_detail.locked ? true : false}
  %p
    %label{:for => "payment_method"}
      Payment Method
    %br
    %input{:type => "text", :name => "payment_method", :value => @affiliate_detail.payment_method}
  %p
    %label{:for => "affiliate_token"}
      Affiliate Token
    %br
    %input{:type => "text", :name => "affiliate_token", :value => @affiliate_detail.affiliate_token}
  %p
    %label{:for => "token_active"}
      Token Active
    %br
    %input{:type => "checkbox", :name => "token_active", :checked => @affiliate_detail.token_active ? true : false}
  %p
    %label{:for => "payments_active"}
      Payments Active
    %br
    %input{:type => "checkbox", :name => "payments_active", :checked => @affiliate_detail.payments_active ? true : false}

  %p
    %input{:type => "submit", :value => "Save Updates", :class => "button"}